#include <stdio.h>

int main (){
//Hora de codar
//Progama de calcular média.
float nota1, nota2, nota3;
float media;

printf("===== Calculadora de média ======\n");

printf("Digita a sua primeira nota: \n");
scanf("%f", &nota1);

printf("Digita a sua segunda nota: \n");
scanf("%f", &nota2);

printf("Digita a sua terceira nota: \n");
scanf("%f", &nota3);

media = (float)(nota1 + nota2 + nota3) / 3;

printf("A média é: %.1f\n\n", media);

printf("============================================================");

return 0;

}
